{
  "compilerOptions": {
    "strict": true,
    "incremental": true,
    "lib": ["ES2019", "DOM"],
    "target": "ES6",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "composite": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "downlevelIteration": true
  }
}
